@using System.Web.UI.WebControls
@using MasterReservation.Models
@using MasterReservation.Utilities
@model ResidentModel


@{
    ViewBag.Title = "Личные данные";

}

@Styles.Render("~/Content/PersonalDataStyles.css")

@Scripts.Render("~/Scripts/PersonalDataScripts.js")

<div class="header">
    <div class="city-wrap">
        <img id="head-logo" src="~/Resources/svg/logo-white.svg">
        <span class="town">Город</span>

        <div class="dropdown">
            <button class="btn btn-secondary dropdown-toggle" type="button" id="dropdownMenuButton" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                Москва
            </button>
            <div class="dropdown-menu" aria-labelledby="dropdownMenuButton">
                <a class="dropdown-item" href="#">Питер</a>
                <a class="dropdown-item" href="#">Ижевск</a>
                <a class="dropdown-item" href="#">Казань</a>
            </div>
        </div>
    </div>

    <div class="icons-wrap">
        <span class="number"><a href="tel:+79198534241">8 919 853 42 41</a></span>
        <div class="cocialicons">
            <a href="https://www.instagram.com/"><img src="~/Resources/img/instagram.png" alt=""></a>
            <a href="https://www.facebook.com/"><img src="~/Resources/img/facebook.png" alt=""></a>
            <a href="https://vk.com"><img src="~/Resources/img/vk.png" alt=""></a>
        </div>

        <div id="userblock">
            <img src="~/Resources/svg/user.svg" id="faceicon" class="dpd-js">
            <span id="residentname" class="dpd-js">@(Model.Surname + " " + Model.Name)</span>

            <img src="~/Resources/svg/down-arrow-white.svg" id="down-arrowstyle" class="dpd-js">
            <div id="user-dropdown">
                <div class="dropdown-row">
                    <img class="dropdown-img" src="~/Resources/svg/business-card-blue.svg" alt="">
                    <span>Личные данные</span>
                </div>
                <hr>
                <div class="dropdown-row">
                    <img class="dropdown-img" src="~/Resources/svg/clock-blue.svg" alt="">
                    <span>Просмотр забронированного времени</span>
                </div>
                <hr>

                <div class="dropdown-row">
                    <img class="dropdown-img" src="~/Resources/svg/heart-blue.svg" alt="">
                    <span>Избранное</span>
                </div>
                <button onclick="document.location = '@Url.Action("LogOut", "Authentication")'" id="go-out">Выйти</button>
            </div>
        </div>
    </div>
</div>
@using (Html.BeginForm("UpdateResident", "Authentication", FormMethod.Post, new {@id = "MainBlock"}))
{
    @Html.HiddenFor(model=>model.Id)

    <div id="BlockOne">
        <div id="photo-wrap">
            <img src="~/Resources/img/avatar-default.png" id="avatar">
            <input type="file" name="picField" id="picField" size="24" onchange="" alt=""/>
        </div>

        <div id="textboxes">
            <div class="input-wrap">

                @Html.EditorFor(model => model.Name, new {htmlAttributes = new {@class = "areastyle", PlaceHolder = "Имя*"}})
                <img src="~/Resources/svg/pencil.svg" class="editbutton">
            </div>

            <div class="input-wrap">
            @Html.EditorFor(model => model.Surname, new {htmlAttributes = new {@class = "areastyle", PlaceHolder = "Лялин*"}})
                <img src="~/Resources/svg/pencil.svg" class="editbutton">
            </div>

            <div class="input-wrap">
                @Html.EditorFor(model => model.Email, new { htmlAttributes = new { @class = "areastyle", PlaceHolder = "Email*" } })
                <img src="~/Resources/svg/pencil.svg" class="editbutton">
            </div>


            <div class="input-wrap">
                @Html.EditorFor(model => model.Phone, new { htmlAttributes = new { @class = "areastyle", PlaceHolder = "Телефон*" } })
                <img src="~/Resources/svg/pencil.svg" class="editbutton">
            </div>

        </div>

    </div>

    <div id="BlockTwo">
        <div id="headertwo">
            <span id="personitems">Личные данные</span>

        </div>
        <div>
           
            @Html.ValidationMessageFor(model => model.Password, null, new { id="WrongPass" })
        </div>

        <div id="BlockTwoContent">
            <span id="AddedStyle">Предоставляемые услуги</span>
            <div id="AddedOffers">

                <div id="offers-wrap">
                    @{
                        string[] mas = new string[] { };

                        try
                        {
                            mas = Model.Offers.Split(';');
                            for (int i = 0; i < mas.Length - 1; i++)
                            {
                                <div class="offer">
                                    <span>@mas[i]</span>
                                    <img src="~/Resources/img/cross-black.png" />
                                </div>
                            }

                        }
                        catch (Exception e)
                        {

                        }







                    }
                </div>

            </div>

            <div class="childone">
                <div id="input-offers-wrap" class="contextmenu">
                    <input class="field" id="input-offers" type="text" autocomplete="off" placeholder="Предоставляемые услуги">
                    <img src="~/Resources/svg/down-arrow.svg">
                    <div id="itemss" class="dropdown-menu">
                        
                    

                    </div>
                </div>
                @Html.EditorFor(model => model.Experience, new { htmlAttributes = new { @class = "jobscore", PlaceHolder = "Стаж Работы*" } })
            </div>

            <div class="childtwo">

                <div>
                   
                    @Html.TextAreaFor(model => model.Awards, new {  id = "childarea", PlaceHolder = "Стаж Работы*"  })
                </div>

                <div id="orientationChildTwo">
                    <span id="ChosePass">Смена пароля</span>
                </div>

                <div class="ChildTwoOffers">

                    <div class="input-wrap-two">
                        @Html.HiddenFor(model => model.Password, new {  @class = "areastyle-two", PlaceHolder = "Текущий пароль*"  })
                        <input type="text" class="areastyle-two" placeholder="Текущий пароль*">
                    </div>


                    <div class="input-wrap-twoOrient">
                      
                        <input type="text" class="areastyle-two" placeholder="Новый пароль">
                    </div>


                    <div class="input-wrap-twoOrient">
                        <input type="text" class="areastyle-two" placeholder="Повторите пароль">
                    </div>
                </div>

                <div id="SaveButton">
                    <button id="savebut">Сохранить</button>
                </div>
            </div>
        </div>
    </div>
}

    <div id="hidden-offers">
        <div>Парикмахерские услуги</div>
        <div>Педикюр</div>
        <div>Массаж</div>
        <div>Визаж</div>
        <div>Шугаринг</div>
    </div>
